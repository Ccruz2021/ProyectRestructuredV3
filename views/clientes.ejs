<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Crud cliente </title>
    
 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css" type="text/css">
  
</head>

<body class="cliente">
 
  <%- include('./partials/navbar.ejs') %>

  <%- include('./partials/message.ejs') %>

      <div class="container flex-container" >
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Email</th>
                <th scope="col"> Provincia </th>
                <th scope="col"> Departamento </th>
                <th scope="col"> Direccion </th>
                <th scope="col"> Rol </th>
              </tr>
            </thead>
            <% results.forEach((cliente) => { %>
            <form action="#"  method="post" id="formulario" >
            <tbody>
              <tr>
                <th scope="col"> <input type="number" class="form-control " name="id" id="id" value="<%= cliente.id %>" hidden ><%= cliente.id %> </th>
                <th scope="col">  <input type="text" class="form-control " name="nombre" id="nombre" value="<%= cliente.nombre %>" hidden >  <%= cliente.nombre %>     </th>
                <th scope="col"> <input type="text" class="form-control " name="apellido" id="apellido" value="<%= cliente.apellido %>"  hidden >  <%= cliente.apellido %> </th>
                <th scope="col"> <input type="text" class="form-control " name="email" id="email" value="<%= cliente.email %>" hidden >  <%= cliente.email %></th>
                <th scope="col"> <input type="text" class="form-control " name="provincia" id="provincia" value="<%= cliente.provincia %>" hidden >  <%= cliente.provincia %> </th>
                <th scope="col"> <input type="text" class="form-control " name="departamento" id="departamento" value="<%= cliente.departamento %>" hidden > <%= cliente.departamento %></th>
                <th scope="col"> <input type="text" class="form-control " name="direccion" id="direccion" value="<%= cliente.direccion %>" hidden > <%= cliente.direccion %></th>
                <th scope="col"> <input type="text" class="form-control " name="rol" id="rol" value="<%= cliente.rol %>" hidden > <%= cliente.rol %></th>
                <th scope="col">
                <div style=" display: inline-flex;" >
                    <a href="/editcliente/<%= cliente.id %> " style=" margin: 10px;" class="btn btn-outline-primary"> Editar  </a>
                    <a href="/quitar/<%= cliente.id %> " style=" margin: 10px;" class="btn btn-outline-danger"> Eliminar</a>
                    <a href="/quita/<%= cliente.id %> " style=" margin: 10px;" class="btn btn-outline-danger">  X </a></th>
      
                  </div>
                  </th>
              </tr>

            </tbody>
           
          </form>
          <% }) %>
          </table>
         
        </div>
      
       
       
      
</body>
</html>