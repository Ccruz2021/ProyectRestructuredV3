<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> CD</title>
    <link rel="stylesheet" href="/css/style.css" >
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body id="historial">

  <%- include('./partials/navbar.ejs') %>
  <%- include('./partials/message.ejs') %>
  
  <% results.forEach((historial) => { %>
   <div class="container flex-container">
      <table class="table">
          <thead>
            <tr>
              <th scope="col">imagen</th>
              <th scope="col">producto</th>
              <th scope="col">nombre</th>
              <th scope="col">descripcion</th>
              <th scope="col"> cantidad </th>
              <th scope="col"> precio </th>
              <th scope="col"> total</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="col"> <img style="width: 100px;" src="/imagen/<%=historial.imagen %>"        </th>
              <th scope="col">   <%= historial.producto %>        </th>
              <th scope="col">  <%= historial.n_producto %>         </th>
              <th scope="col">  <%= historial.description %>        </th>
              <th scope="col">  <%= historial.cantidad %>     </th>
              <th scope="col">  <%= historial.precio %>      </th>
              <th scope="col"> <%= historial.cantidad * historial.precio%>  </th>
              <th scope="col">  <%= historial.Fecha %>      </th>
              
             </tr>
          </tbody>
        </table>
      </div>
      <% }) %>




      <%-include ('./partials/footer.ejs')%>



  
</body>
</html>